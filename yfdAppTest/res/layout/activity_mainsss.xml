<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <!-- <Button -->
    <!-- android:id="@+id/button1" -->
    <!-- android:layout_width="160dp" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_alignParentBottom="true" -->
    <!-- android:layout_centerHorizontal="true" -->
    <!-- android:layout_marginBottom="45dp" -->
    <!-- android:text="读卡" /> -->

    <TextView
        android:id="@+id/placeHolder"
        android:layout_width="fill_parent"
        android:layout_height="105dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeHolder"
        android:layout_margin="0dp"
        android:columnCount="6"
        android:columnWidth="30dp"
        android:numColumns="auto_fit"
        android:padding="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:rowCount="5"
        android:useDefaultMargins="false" >

        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="姓名" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/IDTextStyle"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_rowSpan="4" />

        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="性别" />

        <TextView
            android:id="@+id/tv_sex"
            style="@style/IDTextStyle"
            android:layout_columnSpan="1" />

        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="民族" />

        <TextView
            android:id="@+id/tv_ehtnic"
            style="@style/IDTextStyle"
            android:layout_columnSpan="1" />

        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="出生" />

        <TextView
            android:id="@+id/tv_birthday"
            style="@style/IDTextStyle"
            android:layout_width="wrap_content"
            android:layout_columnSpan="3" />

        <TextView
            style="@style/IDLabelStyle"
            android:layout_columnSpan="1"
            android:text="住址" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_columnSpan="2"
            android:text="公民身份证号码"
            android:textColor="#0099CC" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:textStyle="bold" />

        <TextView
            style="@style/IDLabelStyle"
            android:layout_width="100dp"
            android:layout_columnSpan="2"
            android:text="签发机关" />

        <TextView
            android:id="@+id/tv_signed"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:textStyle="bold" />

        <TextView
            style="@style/IDLabelStyle"
            android:layout_width="100dp"
            android:layout_columnSpan="2"
            android:text="有效期限" />

        <TextView
            android:id="@+id/tv_validate"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:textStyle="bold" />
 <!-- 
        <TextView
            style="@style/IDLabelStyle"
            android:layout_width="100dp"
            android:layout_columnSpan="2"
            android:text="DN码" />

        <TextView
            android:id="@+id/tv_dn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:textStyle="bold" /> -->
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#0099CC" />

        <TextView
            android:id="@+id/tv_samid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
          
            android:text=""
            android:textStyle="bold" />
    </LinearLayout>
    
	<LinearLayout
        android:id="@+id/buttonContent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_info"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonNFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/frame_button_d"
            android:text="NFC方式读卡"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonOTG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/frame_button_d"
            android:text="OTG方式读卡"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/frame_button_d"
            android:text="蓝牙方式读卡"
            android:textColor="@color/black"
            android:textSize="12sp" />
        
    </LinearLayout>    
    <LinearLayout
        android:id="@+id/buttonContent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonContent1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
        
  		<TextView
            android:id="@+id/tv_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"      
            android:text="" /> 
  		<TextView
            android:id="@+id/tv_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"      
            android:text="" />   
        <TextView
            android:id="@+id/tv_averagetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"      
            android:text="" />           
  		<TextView
            android:id="@+id/tv_testcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"      
            android:text="" />                    
        <!-- 
		<Button
            android:id="@+id/buttonSIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/frame_button_d"
            android:text="ICCID"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonmms_imsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/frame_button_d"
            android:text="短信中心及IMSI"
            android:textColor="@color/black"
            android:textSize="12sp" />
         -->
    </LinearLayout>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:text="⊙" />

</RelativeLayout>