<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f8f8f8"
    android:id="@+id/bkroot"
    >
    <RelativeLayout 
        android:layout_height="35dp"
        android:layout_width="fill_parent"
        android:background="@color/light_gray"
        android:id="@+id/s_bkt"
        android:visibility="gone"
        >
        
         <EditText 
                 android:id="@+id/search_namebk"
                 android:layout_marginLeft="5dp"
                 android:layout_height="fill_parent"
                 android:layout_width="fill_parent"
                 android:paddingLeft="5dp"
                 android:background="@drawable/edittext_press_bg"
                 android:layout_toLeftOf="@+id/search_bksavebtn"
                 android:layout_margin="3dp"
                 />
        
        
         <Button 
                      android:paddingLeft="20dp"
                      android:paddingRight="20dp"
                      android:paddingTop="5dp"
                      android:paddingBottom="5dp"
                 android:id="@+id/search_bksavebtn"
                 android:textColor="@color/white"
                 android:layout_centerVertical="true"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:text="查询"
                 android:textSize="16sp"
                 android:layout_alignParentRight="true"
                 android:background="@color/orange"
                 android:gravity="center"
                 android:layout_marginRight="5dp"
                 />
        
    </RelativeLayout>
    
      
  
      <ScrollView 
          android:layout_below="@+id/s_bkt"
          android:layout_height="fill_parent"
          android:layout_width="fill_parent"
          
          >
         <LinearLayout 
              android:layout_height="fill_parent"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              >
              
              <LinearLayout 
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="20dp"
                  >
                  
                  <TextView 
                      android:layout_height="20dp"
                      android:layout_width="20dp"
                      android:textColor="@color/white"
                      android:text="1"
                      android:textSize="11sp"
                      android:background="@drawable/cricle_orgineshpe"
                      android:gravity="center"
                      android:layout_gravity="left|center_vertical"
                      />
                  
                  
                  
                   <TextView 
                  android:layout_marginLeft="3dp"
                  android:padding="3dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="填写卡号信息"
                  android:textColor="@color/light_blue"
                  android:textStyle="bold"
                  android:textSize="16sp"
                   android:gravity="left|center_vertical"
                  />
              </LinearLayout>
              <LinearLayout 
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
                  >
                <LinearLayout 
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="vertical"
                 android:layout_weight="1"
                  >
                  <TextView 
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="运营商类型"
                  android:textColor="@color/txtcolor"
                  />
              <Button 
                  android:id="@+id/bk_choseyys"
                  android:text="请选择"
                  android:paddingLeft="3dp"
                  android:layout_marginTop="5dp"
                  android:layout_height="35dp"
                  android:layout_width="fill_parent"
                  android:background="@drawable/edittext_press_bg"
                 
                  android:drawableRight="@drawable/triangle_up"
                  android:drawablePadding="5dp"
                  android:gravity="center"
                  />
              </LinearLayout>
              
                <LinearLayout 
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:id="@+id/puk_lay"
                  android:orientation="vertical"
                  android:visibility="visible"
                  android:layout_marginLeft="5dp"
                  android:layout_weight="1"
                  >
                 <TextView 
                     android:id="@+id/bk_datetxt"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="入网时间"
                  android:textColor="@color/txtcolor"
                  />
              <Button 
                  android:id="@+id/bk_chosedate"
                  android:text="请选择"
                  android:paddingLeft="3dp"
                  android:layout_marginTop="5dp"
                  android:layout_height="35dp"
                  android:layout_width="fill_parent"
                  android:background="@drawable/edittext_press_bg"
                  android:drawablePadding="5dp"
                  android:gravity="center"
                  />
            </LinearLayout>  
                
                
              </LinearLayout>
              <TextView 
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="20dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="手机号码"
                  android:textColor="@color/txtcolor"
                  android:visibility="gone"
                  />
              <EditText 
                  android:padding="3dp"
                  android:id="@+id/bk_phone"
                  android:hint="输入11位有效手机号"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_height="35dp"
                  android:layout_width="fill_parent"
                  android:background="@drawable/edittext_press_bg"
                  android:textSize="14sp"
                   android:singleLine="true"
                   android:inputType="number"
                  />
                    <TextView 
                          android:layout_marginTop="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="sim卡号"
                  android:textColor="@color/txtcolor"
                  android:visibility="gone"
                 
                  />
                    <RelativeLayout 
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                                          android:layout_marginTop="10dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                        >
                    
              <EditText 
                  android:paddingLeft="3dp"
                  android:hint="服务密码(初始服务密码为手机号码后六位)"

                  android:layout_height="35dp"
                  android:layout_width="fill_parent"
                  android:background="@drawable/edittext_press_bg"
                  android:textSize="14sp"
                  android:singleLine="true"
                  android:id="@+id/bk_mm"
                  android:paddingRight="50dp"
                  />   
                  
          
                  </RelativeLayout>
                
              
               <LinearLayout 
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="20dp"
                  >
                  
                  <TextView 
                      android:layout_height="20dp"
                      android:layout_width="20dp"
                      android:textColor="@color/white"
                      android:text="2"
                      android:textSize="11sp"
                      android:background="@drawable/cricle_orgineshpe"
                      android:gravity="center"
                      android:layout_gravity="left|center_vertical"
                      />
                   <TextView 
                  android:layout_marginLeft="3dp"
                  android:padding="3dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="录入补卡用户信息"
                  android:textColor="@color/light_blue"
                  android:textStyle="bold"
                  android:textSize="16sp"
                   android:gravity="left|center_vertical"
                  />
              </LinearLayout>
             
               <TextView 
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="姓名"
                  android:textColor="@color/txtcolor"
                  android:visibility="gone"
                  />
               
               
                  <RelativeLayout 
                      android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_height="wrap_content"
                 android:layout_width="fill_parent"
                 >
                 
                  <EditText 
                      android:hint="收件人"
                  android:id="@+id/bk_name"
                  android:layout_height="35dp"
                  android:layout_width="fill_parent"
                  android:background="@drawable/edittext_press_bg"
                  android:paddingLeft="5dp"
                    android:textSize="14sp"
                  android:singleLine="true"
                  />
                  
                  <ImageView 
                      android:padding="10dp"
                      android:layout_alignParentRight="true"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_centerInParent="true"
                     android:src="@drawable/saomiao_icon"
                     android:visibility="gone"
                     
                     />
                 
             </RelativeLayout>
             
                  
                    <TextView 
                          android:layout_marginTop="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="联系方式"
                  android:textColor="@color/txtcolor"
                  android:visibility="gone"
                  />
               
               
                  <RelativeLayout 
                      android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_height="wrap_content"
                 android:layout_width="fill_parent"
                 >
                 
                  <EditText 
                      android:paddingLeft="5dp"
                      android:hint="联系方式"
                  android:id="@+id/bk_userphone"
                  android:layout_height="35dp"
                  android:layout_width="fill_parent"
                  android:background="@drawable/edittext_press_bg"
                    android:textSize="14sp"
                  android:singleLine="true"
                  />
                  
                 
                  
                  <ImageView 
                      android:padding="10dp"
                      android:layout_alignParentRight="true"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_centerInParent="true"
                     android:src="@drawable/saomiao_icon"
                     android:visibility="gone"
                     
                     />
                 
             </RelativeLayout>
             
                  <RelativeLayout 
                      android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_height="wrap_content"
                 android:layout_width="fill_parent"
         
                 >
                 
                  <EditText 
                  android:paddingLeft="5dp"
                  android:hint="收件地址"
                  android:id="@+id/bk_adress"
                  android:layout_height="35dp"
                  android:layout_width="fill_parent"
                  android:background="@drawable/edittext_press_bg"
                  android:lines="3"
                  android:textSize="14sp"
               
                  />
                  
                  <ImageView 
                      android:padding="10dp"
                      android:layout_alignParentRight="true"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_centerInParent="true"
                     android:src="@drawable/saomiao_icon"
                     android:visibility="gone"                     
                     />
                 
             </RelativeLayout>
             <LinearLayout 
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
                  >
                <LinearLayout 
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:orientation="vertical"
                 
                  >
                  <TextView 
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="快递类型"
                  android:textColor="@color/txtcolor"
                  />
              <Button 
                  android:id="@+id/bk_chosekd"
                  android:text="请选择"
                  android:paddingLeft="3dp"
                  android:layout_marginTop="5dp"
                  android:layout_height="35dp"
                  android:layout_width="150dp"
                  android:background="@drawable/edittext_press_bg"                 
                  android:drawableRight="@drawable/triangle_up"
                  android:drawablePadding="5dp"
                  android:gravity="center"
                  />
              </LinearLayout>
              <TextView 
                          android:layout_marginTop="5dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_height="fill_parent"
                  android:layout_width="wrap_content"
                  android:text="注:邮费到付 ,国美补卡默认顺丰，如顺丰不到的地区会转寄其他快递"
                  android:textColor="@color/red"
                  android:visibility="visible"
                  android:textSize="10sp"
                  android:gravity="center"
                  />
            </LinearLayout>  
                   <RelativeLayout 
                      android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_height="wrap_content"
                 android:layout_width="fill_parent"
                 >
                 
                  <EditText 
                    
                      android:hint="呼出通话记录或原因（通话记录要写5个，不重复，中间以空格隔开)"
                   android:id="@+id/bk_reason"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:background="@drawable/edittext_press_bg"
                    android:textSize="14sp"
                  android:lines="3"
                  android:padding="3dp"
                  />
                  
                
                 
             </RelativeLayout>   
                  
                            <TextView 
                          android:layout_marginTop="5dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="注:如无法提交通话记录请写明原因，如果无法提交通话记录提交申请一周后补卡"
                  android:textColor="@color/txtcolor"
                  android:visibility="visible"
                  android:textSize="10sp"
                  />
               
               
             
                      <LinearLayout 
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="20dp"
                  >
                  
                  <TextView 
                      android:layout_height="20dp"
                      android:layout_width="20dp"
                      android:textColor="@color/white"
                      android:text="3"
                      android:textSize="11sp"
                      android:background="@drawable/cricle_orgineshpe"
                      android:gravity="center"
                      android:layout_gravity="left|center_vertical"
                      />
                   <TextView 
                  android:layout_marginLeft="3dp"
                  android:padding="3dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="添加补卡人身份证正反照片"
                  android:textColor="@color/light_blue"
                  android:textStyle="bold"
                  android:textSize="16sp"
                   android:gravity="left|center_vertical"
                  />
              </LinearLayout>
             <RelativeLayout 
                 android:layout_marginTop="5dp"
                 android:layout_height="wrap_content"
                 android:layout_width="fill_parent"
                 android:layout_marginLeft="50dp"
                 android:layout_marginRight="50dp"
                 >
                 
                 <ImageView 
                     android:id="@+id/bk_sf_zheng"
                     android:layout_alignParentLeft="true"
                    android:layout_height="100px"
                     android:layout_width="200px"
                     android:layout_centerVertical="true"
                     android:src="@drawable/zheng"
                     android:layout_margin="20dp"
                     android:scaleType="fitStart"
                     />
                   <ImageView 
                     android:id="@+id/bk_sf_fan"
                     android:layout_alignParentRight="true"
                     android:layout_height="100px"
                     android:layout_width="200px"
                     android:layout_centerVertical="true"
                     android:src="@drawable/fan"
                     android:layout_margin="20dp"
                      android:scaleType="fitStart"
                     />
                 
             </RelativeLayout>
              <LinearLayout 
                  android:visibility="gone"
                  android:id="@+id/bk_laypic"
                  android:orientation="vertical"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent">
                   <LinearLayout 
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="20dp"
                  >
                  
                  <TextView 
                      android:layout_height="20dp"
                      android:layout_width="20dp"
                      android:textColor="@color/white"
                      android:text="4"
                      android:textSize="11sp"
                      android:background="@drawable/cricle_orgineshpe"
                      android:gravity="center"
                      android:layout_gravity="left|center_vertical"
                      />
                   <TextView 
                  android:layout_marginLeft="3dp"
                  android:padding="3dp"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="添加补卡人手持身份证照片"
                  android:textColor="@color/light_blue"
                  android:textStyle="bold"
                  android:textSize="16sp"
                   android:gravity="left|center_vertical"
                  />
              </LinearLayout>
             <RelativeLayout 
                 android:visibility="visible"
                 android:layout_marginTop="10dp"
                 android:layout_height="wrap_content"
                 android:layout_width="fill_parent"
                 android:layout_marginLeft="50dp"
                 android:layout_marginRight="50dp"
                 >
                 
                 <ImageView 
                     android:id="@+id/bksf_pas"
                     android:layout_height="100px"
                     android:layout_width="200px"
                     android:layout_centerInParent="true"
                     android:src="@drawable/zheng"
                     android:layout_margin="20dp"
                     android:scaleType="fitStart"
                     />
      
                 
             </RelativeLayout>
             </LinearLayout>
             <Button 
                 android:id="@+id/bk_save"
                 android:textColor="@color/white"
                 android:layout_marginTop="35dp"
                 android:layout_height="50dp"
                 android:layout_width="200dp"
                 android:text="提交"
                 android:textSize="20sp"
                 android:layout_gravity="center"
                 android:background="@color/orange"
                 android:gravity="center"
                 android:layout_marginBottom="100dp"
                 />
              
          </LinearLayout>
          
      </ScrollView>

</RelativeLayout>
