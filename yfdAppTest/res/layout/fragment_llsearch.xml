<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >
     <LinearLayout 
         android:paddingTop="10dp"
         android:layout_height="wrap_content"
         android:layout_width="fill_parent"
         android:orientation="vertical"
        android:id="@+id/llstop"
         >
         
         <LinearLayout 
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_height="30dp"
             android:layout_width="fill_parent"
             android:orientation="horizontal"
             >
             
             <TextView 
                 android:layout_height="fill_parent"
                 android:layout_width="60dp"
                 android:gravity="left|center_vertical"
                 android:text="手机号  "
                 android:textColor="@color/gray"
                 />
             
             <EditText 
                 android:hint="输入手机号"
                 android:id="@+id/search_namell"
                 android:layout_marginLeft="10dp"
                 android:layout_height="fill_parent"
                 android:layout_width="fill_parent"
                 android:paddingLeft="5dp"
                 android:background="@drawable/edittext_press_bg"
                   android:textSize="14sp"
                 />

         
              
               
         </LinearLayout>
         
                  <Button 
                      android:paddingLeft="20dp"
                      android:paddingRight="20dp"
                      android:paddingTop="5dp"
                      android:paddingBottom="5dp"
                 android:id="@+id/search_llsavebtn"
                 android:textColor="@color/white"
                 android:layout_marginTop="10dp"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:text="查询"
                 android:textSize="16sp"
                 android:layout_gravity="center"
                 android:background="@color/orange"
                 android:gravity="center"
                 />
              
            

     </LinearLayout>
       <LinearLayout 
           android:layout_below="@+id/llstop"
                  android:layout_marginTop="10dp"
                  android:background="@color/light_gray"
                  android:layout_height="40dp"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:id="@+id/llll"
                  >
                   <TextView 
                 android:layout_height="fill_parent"
                 android:layout_width="0.0dp"
                 android:gravity="center"
                 android:text="订单号"
                 android:textColor="@color/gray"
                 android:layout_weight="1"
                 />  
                 
                    <TextView 
                 android:layout_height="fill_parent"
                 android:layout_width="0.0dp"
                 android:gravity="center"
                 android:text="手机号"
                 android:textColor="@color/gray"
                 android:layout_weight="1"
                 />  
                  
                         <TextView 
                 android:layout_height="fill_parent"
                 android:layout_width="0.0dp"
                 android:gravity="center"
                 android:text="流量"
                 android:textColor="@color/gray"
                 android:layout_weight="1"
                 />  
                         <TextView 
                 android:layout_height="fill_parent"
                 android:layout_width="0.0dp"
                 android:gravity="center"
                 android:text="金额"
                 android:textColor="@color/gray"
                 android:layout_weight="1"
                 />  
                                <TextView 
                 android:layout_height="fill_parent"
                 android:layout_width="0.0dp"
                 android:gravity="center"
                 android:text="状态"
                 android:textColor="@color/gray"
                 android:layout_weight="1"
                 />  
              </LinearLayout> 
      <ListView 
         android:layout_below="@+id/llll"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/lls_txt"
         android:textSize="18sp"
         android:dividerHeight="1px"
         />

</RelativeLayout>
