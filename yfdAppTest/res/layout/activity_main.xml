<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="10dp"
     >
    
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/main1"
        >                
        <ImageView 
            android:layout_height="150dp"
            android:layout_width="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/maintoptst"
            android:id="@+id/main_tohd"
            android:visibility="gone"
            />
        
        <fragment
        android:id="@+id/fragment_cycle_viewpager_content"
        android:name="cn.androiddevelop.cycleviewpager.lib.CycleViewPager"
        android:layout_width="match_parent"
        android:layout_height="180dip" />
        
          <Button 
              android:id="@+id/main_s"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/search_icon"
            android:layout_height="40dp"
            android:layout_width="fill_parent"
            android:layout_margin="13dp"
            android:background="@drawable/main_search_bg"
            android:text="搜索"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
        
    </RelativeLayout>   
    
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/main1"
        android:layout_above="@+id/main_bottom"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"        
        >
        
        <LinearLayout 
            android:id="@+id/main_kkl"
            android:layout_height="0.0dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            >
            
            <RelativeLayout 
                android:layout_height="fill_parent"
                android:layout_width="0.0dp"
                android:layout_weight="2"
                android:id="@+id/main_menu_kk"
                android:background="@drawable/main_menu_pkaika_bg"
                android:clickable="true"
                >
                
                <TextView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="普号开卡"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    />
                
                <ImageView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/kaika_icon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    />
                
                
            </RelativeLayout>
            
            
              <RelativeLayout 
                  android:layout_marginLeft="10dp"
                android:layout_height="fill_parent"
                android:layout_width="0.0dp"
                android:layout_weight="1"
                android:id="@+id/main_menu_lhkk"
                android:background="@drawable/main_menu_lkaika_bg"
                android:clickable="true"
                >
                
                <TextView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="靓号开卡"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    />
                
                <ImageView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/kaika_icon2"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    />                
            </RelativeLayout>
            
            
        </LinearLayout>
        
          <LinearLayout 
              android:layout_marginTop="10dp"
            android:layout_height="0.0dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            >
              
                 <RelativeLayout 
                android:layout_height="fill_parent"
                android:layout_width="0.0dp"
                android:layout_weight="2"
                android:id="@+id/main_hfcz"
                android:background="@drawable/main_menu_hfcz_bg"
                android:clickable="true"
                >
                
                <TextView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="话费充值"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    />
                
                <ImageView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/bill_icon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    />
                
                
            </RelativeLayout>
            
                 <View 
                     android:id="@+id/leftv1"
                     android:layout_height="fill_parent"
                     android:layout_width="10dp"
                     android:visibility="invisible"
                     />
            
              <RelativeLayout 
                android:layout_height="fill_parent"
                android:layout_width="0.0dp"
                android:layout_weight="1"
                android:id="@+id/main_shouhou"
                android:background="@drawable/main_menu_shcl_bg"
                android:clickable="true"
                >
                
                <TextView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="售后处理"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    />
                
                <ImageView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/service_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    />                
            </RelativeLayout>
              
              
              
              
          </LinearLayout>
          
           <LinearLayout 
               android:layout_marginTop="10dp"
            android:layout_height="0.0dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            >
            
            <RelativeLayout 
                android:layout_height="fill_parent"
                android:layout_width="0.0dp"
                android:layout_weight="1"
                android:id="@+id/main_LLcz"
                android:background="@drawable/main_menu_llcz_bg"
                android:clickable="true"
                >
                
                <TextView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="流量充值"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    />
                
                <ImageView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/bill_icon2"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    />
                
                
            </RelativeLayout>
            
            
            
              <LinearLayout 
                
                android:layout_height="fill_parent"
                android:layout_width="0.0dp"
                android:layout_weight="2"
                
                android:orientation="horizontal"
                >
                <View 
                     android:id="@+id/leftv2"
                     android:layout_height="fill_parent"
                     android:layout_width="10dp"
                     android:visibility="invisible"
                     />
                  <LinearLayout 
                      android:layout_height="fill_parent"
                      android:layout_width="fill_parent"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      >
                      <RelativeLayout 
                          android:layout_height="fill_parent"
                          android:layout_width="fill_parent"
                          android:layout_weight="1"
                           android:layout_marginBottom="5dp"
                          android:clickable="true"
                           android:background="@drawable/main_menu_cxfw_bg"
                           android:id="@+id/main_search"
                          >
                      <TextView 
                            android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:text="查询服务"
                          android:textColor="@color/white"
                          android:drawableLeft="@drawable/search_icon"
                          android:layout_centerInParent="true"                       
                          />
                      </RelativeLayout>
                        <RelativeLayout 
                          android:layout_height="fill_parent"
                          android:layout_width="fill_parent"
                          android:layout_weight="1"
                           android:layout_marginTop="5dp"
                          android:clickable="true"
                          android:background="@drawable/main_menu_grzx_bg"
                          android:id="@+id/main_toperssion"
                          >
                      <TextView 
                          android:layout_marginTop="5dp"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:text="个人中心"
                          android:textColor="@color/white"
                          android:drawableLeft="@drawable/user_icon"
                          android:layout_centerInParent="true"
                          />     
                          </RelativeLayout>                 
                  </LinearLayout>
                  
                  <LinearLayout 
                      android:layout_height="fill_parent"
                      android:layout_width="fill_parent"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_marginLeft="10dp"
                      >
                        <RelativeLayout 
                            android:id="@+id/down"
                          android:layout_height="fill_parent"
                          android:layout_width="fill_parent"
                          android:layout_weight="1"
                           android:layout_marginBottom="5dp"
                          android:clickable="true"
                          android:background="@drawable/main_menu_yqhy_bg"
                          >
                          <TextView 
                            android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:text="邀请好友"
                          android:textColor="@color/white"
                          android:drawableLeft="@drawable/add_icon"
                        android:layout_centerInParent="true"
                          />
                          </RelativeLayout>
                           <RelativeLayout 
                          android:layout_height="fill_parent"
                          android:layout_width="fill_parent"
                          android:layout_weight="1"
                           android:layout_marginTop="5dp"
                          android:clickable="true"
                          android:background="@drawable/main_menu_more_bg"
                          android:id="@+id/main_more"
                          >
                      <TextView 
                          android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:text="联系我们"
                          android:textColor="@color/white"
                          
                          android:layout_centerInParent="true"
                          />  
                          </RelativeLayout>
                  </LinearLayout>
                              
            </LinearLayout>
            
            
        </LinearLayout>
        
        
        
    </LinearLayout>
    
    
    <RelativeLayout 
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/main_bottom"
        android:layout_alignParentBottom="true" 
           android:background="#5d5f71"
           android:visibility="gone"
        >
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/user_icon"
            android:layout_gravity="center"
            />
        <TextView 
            android:id="@+id/main_lastprice"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="我的     余额：0.00"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        
    </LinearLayout>
</RelativeLayout>

    
</RelativeLayout>
