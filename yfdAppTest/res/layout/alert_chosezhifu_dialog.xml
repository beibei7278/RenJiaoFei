<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip" >

            <RelativeLayout
                android:id="@+id/z_wxzhifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                android:layout_centerInParent="true" >

                <Button
                    android:id="@+id/btn_wx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                  
                    android:layout_weight="1"
                    android:background="@drawable/chosepic_bgc"
                    android:drawablePadding="20dp"
                    android:drawableTop="@drawable/weixin_icon"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="微信支付"
                    android:textColor="@drawable/chosepic_textcolor"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lf_zfb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:visibility="visible" >

            <Button
                android:id="@+id/btn_zfb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/chosepic_bgc"
                android:drawablePadding="20dp"
                android:drawableTop="@drawable/alipay_icon"
                android:gravity="center"
                android:padding="15dp"
                android:text="支付宝"
                android:textColor="@drawable/chosepic_textcolor"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lf_ptzf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_pt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/chosepic_bgc"
                android:gravity="center"
                android:padding="15dp"
                android:text="平台充值"
                android:textColor="@drawable/chosepic_textcolor"
                android:textSize="18sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnzf_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/chosepic_cancle"
            android:padding="15dp"
            android:text="取消"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>