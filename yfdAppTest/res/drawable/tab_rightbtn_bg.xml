<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_checked="true"> 
        
        <shape >
            
            <corners 
                android:topRightRadius="10dp"
                android:bottomRightRadius="10dp"
                />
            <solid 
                android:color="@color/light_blue"
                />
            <stroke
                android:width="1dp"
                android:color="@color/light_blue"
                ></stroke>
            
        </shape>
        
    </item>
    
