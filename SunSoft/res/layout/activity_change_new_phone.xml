<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/title_main_back" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:layout_marginTop="@dimen/main_size_fifteen"
        android:background="@color/color_xian_kuang" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="@dimen/main_size_ten" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您当前的绑定手机是："
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />

        <TextView
            android:id="@+id/change_new_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />
    </LinearLayout>
 <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:background="@color/color_xian_kuang" />
    <TextView
        android:id="@+id/change_new_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_size_thirty"
        android:layout_marginRight="@dimen/main_size_thirty"
        android:layout_marginTop="@dimen/main_size_thirty"
        android:background="@drawable/shape_btn_biankuang"
        android:gravity="center"
        android:padding="@dimen/main_size_five"
        android:textColor="@color/black"
        android:textSize="@dimen/main_text_fifteen"
        android:text="绑定新手机" />

</LinearLayout>