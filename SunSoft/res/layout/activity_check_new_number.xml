<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/title_main_back" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:layout_marginTop="@dimen/main_size_fifteen"
        android:background="@color/color_xian_kuang" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:background="@color/white"
        android:padding="@dimen/main_size_ten" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />

        <EditText
            android:id="@+id/edt_input_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入新手机号"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="@dimen/main_text_fifteen" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
       
        android:background="@color/color_xian_kuang" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:padding="@dimen/main_size_five" >

        <TextView
            android:id="@+id/tv_yanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:text="验证码："
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />

        <EditText
            android:id="@+id/edt_input_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_yanzheng"
            android:background="@null"
            android:hint="点击右侧文字"
             android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />

        <TextView
            android:id="@+id/send_yanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:background="@drawable/shape_btn_yanzhengma"
            android:textColor="@color/color_yellow_ju"
            android:textSize="@dimen/main_text_fifteen" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:background="@color/color_xian_kuang" />

    <TextView
        android:id="@+id/change_new_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_size_ten"
        android:layout_marginRight="@dimen/main_size_ten"
        android:layout_marginTop="@dimen/main_size_thirty"
        android:background="@drawable/shape_btn_biankuang"
        android:gravity="center"
        android:padding="@dimen/main_size_five"
        android:text="绑定手机"
        android:textColor="@color/black" />
      <TextView
            android:id="@+id/time_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
           />

</LinearLayout>