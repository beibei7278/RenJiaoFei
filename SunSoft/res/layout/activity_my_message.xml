<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_my_garden_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/title_main_back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_my_garden_background"
        android:padding="@dimen/main_size_twenty" >

        <com.sunsoft.zyebiz.b2e.wiget.CircularImage
            android:id="@+id/my_garden_touxiang"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
             android:background="@drawable/mygarden_touxiang" />

        <TextView
            android:id="@+id/person_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_garden_touxiang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/main_size_ten"
            android:text="张晓强"
            android:textColor="@color/black" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_person_zhanghu_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/main_size_ten" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账户信息管理"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/jiantou" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:background="@color/white"
          android:layout_marginTop="@dimen/main_size_fifteen"
        android:padding="@dimen/main_size_ten" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen"
            />

        <TextView
            android:id="@+id/person_message_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="张三"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/main_text_fifteen"
            />
    </RelativeLayout>

   <!--  <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:background="@color/color_xian_kuang" /> -->

    <RelativeLayout
        android:id="@+id/rel_person_change_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
         android:background="@color/white"
        android:padding="@dimen/main_size_ten" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="绑定手机号"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen"
            />

        <TextView
            android:id="@+id/person_message_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="18654546390"
            android:textColor="@color/color_gray"
             android:layout_marginRight="20dp"
            android:textSize="@dimen/main_text_fifteen"
             />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@drawable/jiantou" />
    </RelativeLayout>

   

    <RelativeLayout
        android:id="@+id/rel_person_change_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/main_size_fifteen"
        android:orientation="horizontal"
         android:background="@color/white"
        android:padding="@dimen/main_size_ten" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/jiantou" />
    </RelativeLayout>

   <!--  <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:background="@color/color_xian_kuang" /> -->

</LinearLayout>