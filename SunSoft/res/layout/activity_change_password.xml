<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/title_main_back" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:layout_marginTop="@dimen/main_size_fifteen"
        android:background="@color/color_xian_kuang" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/main_size_ten" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码："
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />

        <EditText
            android:id="@+id/change_password_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:layout_marginLeft="@dimen/main_size_ten"
        android:layout_marginRight="@dimen/main_size_ten"
        android:background="@color/color_xian_kuang" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/main_size_ten" >

        <TextView
            android:id="@+id/tv_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码："
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />

        <EditText
           android:id="@+id/change_password_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_new_password"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />

        <Button
            android:id="@+id/btn_visible"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/xiaoyanjing_biyan" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:layout_marginLeft="@dimen/main_size_ten"
        android:layout_marginRight="@dimen/main_size_ten"
        android:background="@color/color_xian_kuang" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/main_size_ten" >

        <TextView
            android:id="@+id/tv_confirm_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新密码："
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />

        <EditText
            android:id="@+id/change_password_old_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_confirm_new_password"
            android:background="@null"
            android:hint="重复输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_fifteen" />

        <Button
            android:id="@+id/btn_confirm_visible"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/xiaoyanjing_biyan" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_size_one"
        android:layout_marginLeft="@dimen/main_size_ten"
        android:layout_marginRight="@dimen/main_size_ten"
        android:background="@color/color_xian_kuang" />

    <TextView
        android:id="@+id/change_password_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_size_ten"
        android:layout_marginRight="@dimen/main_size_ten"
        android:layout_marginTop="@dimen/main_size_thirty"
        android:background="@drawable/shape_btn_biankuang"
        android:gravity="center"
        android:padding="@dimen/main_size_five"
        android:text="保存"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_size_twenty"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/forget_pas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/main_size_ten"
            android:text="@string/tv_do_forget_pas"
            android:textColor="@color/color_light_blue"
            android:textSize="@dimen/main_text_fifteen" />
    </RelativeLayout>

</LinearLayout>