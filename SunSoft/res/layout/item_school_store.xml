<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_store_shangpin"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/yifu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_store_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京大学附属中学"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2015年秋季校服（男款）"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/tv_store_xiangqing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="商品详情"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/tv_store_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="厂家信息"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/tv_store_zhushou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="查看尺码助手"
                android:textColor="@color/blue" />
             <TextView
                android:id="@+id/tv_store_zixun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="在线咨询"
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>
    <!-- 尺码 -->

