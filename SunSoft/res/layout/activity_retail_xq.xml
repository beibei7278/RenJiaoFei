<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/color_tab_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/color_dark_blue"
        >

        <TextView
        android:id="@+id/tv_title_back"
        android:layout_width="50dp"
        android:layout_height="50dp" />

   <ImageView
        android:id="@+id/img_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/title_main_back"
        android:clickable="true"
        android:visibility="visible" />
    <TextView
        android:id="@+id/title_main_back_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:textColor="@color/white" >
    </TextView>

    <TextView
        android:id="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="阳光智园"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white" >
    </TextView>

    

    <RelativeLayout
        android:id="@+id/my_garden_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/commodity_shop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/xiangqing_gouwuche" />

    </RelativeLayout>

    </RelativeLayout>

    <WebView
        android:id="@+id/group_buy_retail_webview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/layout_no_network" />
    </RelativeLayout>

</LinearLayout>